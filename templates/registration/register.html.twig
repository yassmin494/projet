{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
<style>
    body {
         background: url('{{ asset('assets/images/home/banner.jpg') }}') no-repeat center center fixed;
      background-size: cover;
        font-family: 'Arial', sans-serif;
    }
    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .register-card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 450px;
    }
    .register-card h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #333;
    }
    .register-card label {
        display: block;
        margin-bottom: 0.25rem;
        font-weight: bold;
    }
    .register-card input {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border-radius: 6px;
        border: 1px solid #ccc;
    }
    .register-card button {
        width: 100%;
        padding: 0.7rem;
        background-color: #4a90e2;
        border: none;
        color: #fff;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.3s ease;
    }
    .register-card button:hover {
        background-color: #357ab8;
    }
    /* Fix checkbox style */
.register-card .form-check {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
}

.register-card .form-check input[type="checkbox"] {
    width: 18px;
    height: 18px;
    margin-right: 0.5rem;
    accent-color: #4a90e2; /* modern checkbox color */
}

.register-card .form-check label {
    margin: 0;
    font-size: 0.9rem;
    color: #555;
}

</style>

<div class="register-container">
    <div class="register-card">
        <h1>Sign Up</h1>
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            <div class="form-check">
    {{ form_widget(registrationForm.agreeTerms) }}
   {{ form_label(registrationForm.agreeTerms)}}
    {{ form_errors(registrationForm.agreeTerms) }}
</div>

            <button type="submit">Register</button>
        {{ form_end(registrationForm) }}
        <p style="text-align:center;margin-top:10px;">Already have an account? <a href="{{ path('app_login') }}">Login</a></p>

    </div>
</div>

{% endblock %}
