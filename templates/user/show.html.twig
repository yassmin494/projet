{% extends 'base.html.twig' %}
{% set active_page = 'Manage Client' %}
{% block title %}User Details{% endblock %}

{% block body %}

<style>

/* Layout */
.admin-container {
    display: flex;
    height: 100vh;
    background: #f5f7fa;
    font-family: "Segoe UI", sans-serif;
}

/* Sidebar */
.sidebar {
    width: 250px;
    background: #1e1e2d;
    color: #fff;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
}

.sidebar h2 {
    text-align: center;
    font-size: 22px;
    margin-bottom: 30px;
    font-weight: 700;
     color: #fff;
}

.menu a {
    color: #d1d1d1;
    padding: 15px 25px;
    display: block;
    font-size: 16px;
    text-decoration: none;
    transition: 0.3s;
}

.menu a:hover {
    background: #27293d;
    color: #fff;
}

/* Active link */
.menu .active {
    background: #4c4fff;
    color: #fff !important;
    border-left: 4px solid #ffffff;
}

/* Dashboard Content */
.content {
    flex: 1;
    padding: 40px;
}

.content h1 {
    margin-bottom: 20px;
    font-size: 28px;
    font-weight: 700;
}

.cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
    margin-top: 25px;
}

.card {
    background: #fff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.07);
    text-align: center;
    transition: 0.3s;
}

.card:hover {
    transform: translateY(-4px);
}

.card h3 {
    font-size: 20px;
    margin-bottom: 10px;
}

.card p {
    font-size: 16px;
    color: #555;
}

.user-card {
    max-width: 650px;
    margin: 40px auto;
    background: #fff;
    border-radius: 15px;
    box-shadow: 0 5px 25px rgba(0,0,0,0.08);
    padding: 30px 40px;
}

.user-card h2 {
    font-size: 26px;
    margin-bottom: 25px;
    font-weight: 700;
    color: #333;
}

.info-row {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid #f0f0f0;
}

.info-row:last-child {
    border-bottom: none;
}

.info-label {
    font-weight: 600;
    color: #555;
}

.info-value {
    font-weight: 500;
    color: #333;
}

.action-btns {
    margin-top: 30px;
    display: flex;
    gap: 15px;
}

.action-btns a,
.action-btns form button {
    min-width: 120px;
}

.btn-delete {
    background: #dc3545 !important;
    color: #fff !important;
}
</style>
<div class="admin-container">

    <!-- LEFT SIDEBAR -->
    <div class="sidebar">
        <h2>Admin Panel</h2>

        <div class="menu">
<a href="{{ path('admin_service_index') }}" class="{% if active_page == 'services' %}active{% endif %}">Services</a>
<a href="{{ path('admin_reservation_index') }}" class="{% if active_page == 'reservations' %}active{% endif %}">Reservations</a>
<a href="{{ path('app_adminclient') }}" class="{% if active_page == 'Manage Client' %}active{% endif %}">Manage Client</a>
<a href="{{ path('app_statistics') }}" class="{% if active_page == 'statistics' %}active{% endif %}">Statistics</a>

        </div>
    </div>
<div class="user-card">

    <h2>ðŸ‘¤ User Details</h2>

    <div class="info-row">
        <div class="info-label">ID:</div>
        <div class="info-value">{{ user.id }}</div>
    </div>

    <div class="info-row">
        <div class="info-label">Email:</div>
        <div class="info-value">{{ user.email }}</div>
    </div>

    <div class="info-row">
        <div class="info-label">Roles:</div>
        <div class="info-value">
            {% for role in user.roles %}
                <span class="badge bg-primary">{{ role }}</span>
            {% endfor %}
        </div>
    </div>

    <div class="info-row">
        <div class="info-label">Verified:</div>
        <div class="info-value">
            {% if user.isVerified %}
                <span class="badge bg-success">Yes</span>
            {% else %}
                <span class="badge bg-warning">No</span>
            {% endif %}
        </div>
    </div>
<a href="{{ path('app_adminclient', {'id': user.id}) }}" class="btn btn-warning">Back </a>
</div>



{% endblock %}
