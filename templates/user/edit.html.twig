{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

<style>
/* Page Title */
.page-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 35px;
}

.page-header i {
    font-size: 32px;
    color: #4c4fff;
}

/* Card */
.edit-card {
    max-width: 750px;
    margin: auto;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(12px);
    padding: 35px;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
}

.edit-card h4 {
    margin-bottom: 25px;
    font-weight: 600;
}

/* Form groups */
.form-group-custom {
    margin-bottom: 20px;
}

.form-group-custom label {
    font-weight: 600;
    margin-bottom: 6px;
}

/* Buttons */
.btn-back {
    background: #4c4fff;
    border: none;
    transition: 0.2s;
}

.btn-back:hover {
  background: #4c4fff;
}

.btn-update {
    background: #4c4fff;
    border: none;
    transition: 0.2s;
}

.btn-update:hover {
    background: #3a3acc;
}

.actions-row {
    display: flex;
    justify-content: space-between;
    margin-top: 25px;
}
</style>



<div class="container mt-5">

    <!-- Page Header -->
    <div class="page-header">
        <i class="bi bi-person-gear"></i>
        <h1 class="m-0">Edit User</h1>
    </div>

    <!-- Elegant Card -->
    <div class="edit-card">

        <h4><i class="bi bi-pencil-square"></i> User Information</h4>

        {{ form_start(form) }}

        <div class="form-group-custom">
            {{ form_label(form.email, 'Email Address') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.roles, 'Roles') }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.password, 'Password (hashed)') }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.isVerified, 'Email Verified') }}
            {{ form_widget(form.isVerified, {'attr': {'class': 'form-check-input'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.userInfo, 'User Info Profile') }}
            {{ form_widget(form.userInfo, {'attr': {'class': 'form-select'}}) }}
        </div>

        <!-- Buttons -->
        <div class="actions-row">

            <a href="{{ path('app_adminclient') }}" class="btn btn-back text-white">
                â¬… Back 
            </a>

            <button class="btn btn-update text-white">
                ðŸ’¾ Save Changes
            </button>

        </div>

        {{ form_end(form) }}

        

    </div>
</div>

{% endblock %}
