{% extends 'base.html.twig' %}
{% set active_page = 'Manage Client' %}

{% block title %}Edit User{% endblock %}

{% block body %}

<style>
/* Page Title */
.page-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 35px;
}

.page-header i {
    font-size: 32px;
    color: #4c4fff;
}

/* Card */
.edit-card {
    max-width: 750px;
    margin: auto;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(12px);
    padding: 35px;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
}

.edit-card h4 {
    margin-bottom: 25px;
    font-weight: 600;
}

/* Form groups */
.form-group-custom {
    margin-bottom: 20px;
}

.form-group-custom label {
    font-weight: 600;
    margin-bottom: 6px;
}

/* Buttons */
.btn-back {
    background: #4545e1ff;
    border: none;
    transition: 0.2s;
}

.btn-back:hover {
  background: #4545e1ff;
}

.btn-update {
    background: #4c4fff;
    border: none;
    transition: 0.2s;
}

.btn-update:hover {
    background: #3a3acc;
}

.actions-row {
    display: flex;
    justify-content: space-between;
    margin-top: 25px;
}

/* Layout */
.admin-container {
    display: flex;
    height: 100vh;
    background: #f5f7fa;
    font-family: "Segoe UI", sans-serif;
}

/* Sidebar */
.sidebar {
    width: 250px;
    background: #1e1e2d;
    color: #fff;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
}

.sidebar h2 {
    text-align: center;
    font-size: 22px;
    margin-bottom: 30px;
    font-weight: 700;
     color: #fff;
}

.menu a {
    color: #d1d1d1;
    padding: 15px 25px;
    display: block;
    font-size: 16px;
    text-decoration: none;
    transition: 0.3s;
}

.menu a:hover {
    background: #27293d;
    color: #fff;
}

/* Active link */
.menu .active {
    background: #4c4fff;
    color: #fff !important;
    border-left: 4px solid #ffffff;
}

/* Dashboard Content */
.content {
    flex: 1;
    padding: 40px;
}

.content h1 {
    margin-bottom: 20px;
    font-size: 28px;
    font-weight: 700;
}

.cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
    margin-top: 25px;
}

.card {
    background: #fff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.07);
    text-align: center;
    transition: 0.3s;
}

.card:hover {
    transform: translateY(-4px);
}

.card h3 {
    font-size: 20px;
    margin-bottom: 10px;
}

.card p {
    font-size: 16px;
    color: #555;
}
</style>

<div class="admin-container">

    <!-- LEFT SIDEBAR -->
    <div class="sidebar">
        <h2>Admin Panel</h2>

        <div class="menu">
<a href="{{ path('admin_service_index') }}" class="{% if active_page == 'services' %}active{% endif %}">Services</a>
<a href="{{ path('admin_reservation_index') }}" class="{% if active_page == 'reservations' %}active{% endif %}">Reservations</a>
<a href="{{ path('app_adminclient') }}" class="{% if active_page == 'Manage Client' %}active{% endif %}">Manage Client</a>
<a href="{{ path('app_statistics') }}" class="{% if active_page == 'statistics' %}active{% endif %}">Statistics</a>

        </div>
    </div>

<div class="container mt-5">

    <!-- Page Header -->
    <div class="page-header">
        <i class="bi bi-person-gear"></i>
        <h1 class="m-0">Edit User</h1>
    </div>

    <!-- Elegant Card -->
    <div class="edit-card">

        <h4><i class="bi bi-pencil-square"></i> User Information</h4>

        {{ form_start(form) }}

        <div class="form-group-custom">
            {{ form_label(form.email, 'Email Address') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.roles, 'Roles') }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.password, 'Password (hashed)') }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.isVerified, 'Email Verified') }}
            {{ form_widget(form.isVerified, {'attr': {'class': 'form-check-input'}}) }}
        </div>

        <div class="form-group-custom">
            {{ form_label(form.userInfo, 'User Info Profile') }}
            {{ form_widget(form.userInfo, {'attr': {'class': 'form-select'}}) }}
        </div>

        <!-- Buttons -->
        <div class="actions-row">

          

            <button class="btn btn-update text-white">
                ðŸ’¾ Save Changes
            </button>

        </div>

        {{ form_end(form) }}

        

    </div>
</div>

{% endblock %}
