{% extends 'base.html.twig' %}

{% set active_page = active_page|default('dashboard') %}

{% block body %}
<style>
/* ===== Layout ===== */
.admin-container {
    display: flex;
    height: 100vh;
    background: #f5f7fa;
    font-family: "Segoe UI", sans-serif;
}

/* ===== Sidebar ===== */
.sidebar {
    width: 250px;
    background: #1e1e2d;
    color: #fff;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
}

.sidebar h2 {
    text-align: center;
    font-size: 22px;
    margin-bottom: 30px;
    font-weight: 700;
    color: #fff;
}

.menu a {
    color: #d1d1d1;
    padding: 15px 25px;
    display: block;
    font-size: 16px;
    text-decoration: none;
    transition: 0.3s;
}

.menu a:hover {
    background: #27293d;
    color: #fff;
}

.menu .active {
    background: #4c4fff;
    color: #fff !important;
    border-left: 4px solid #ffffff;
}

/* ===== Dashboard Content ===== */
.content {
    flex: 1;
    padding: 40px;
}

.content h1 {
    margin-bottom: 20px;
    font-size: 28px;
    font-weight: 700;
}

.admin-info {
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.07);
    margin-bottom: 30px;
}

.admin-info h3 {
    margin-bottom: 10px;
}

.admin-info p {
    color: #555;
    margin: 4px 0;
}

/**/

.admin-info {
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.07);
    margin-bottom: 30px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.admin-details h3 {
    margin-bottom: 10px;
}

.admin-details p {
    margin: 4px 0;
    color: #555;
}

.admin-icon {
    font-size: 80px;
    color: #4c6ef5;
}

</style>

<div class="admin-container">

    <!-- LEFT SIDEBAR -->
    <div class="sidebar">
        <h2>Admin Panel</h2>

        <div class="menu">
            <a href="{{ path('admin_service_index') }}" class="{% if active_page == 'Services' %}active{% endif %}">Services</a>
            <a href="{{ path('admin_reservation_index') }}" class="{% if active_page == 'Reservations' %}active{% endif %}">Reservations</a>
            <a href="{{ path('app_adminclient') }}" class="{% if active_page == 'Clients' %}active{% endif %}">Manage Client</a>
            <a href="{{ path('app_statistics') }}" class="{% if active_page == 'Statistics' %}active{% endif %}">Statistics</a>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="content">
        <h1>Dashboard Overview</h1>
{% if app.user %}
    <div class="admin-info">
        <h3>Admin Info</h3>
        {# Use email as identifier #}
        <p><strong>Email:</strong> {{ app.user.email }}</p>
        {# Show roles as comma-separated #}
        <p><strong>Roles:</strong> {{ app.user.roles|join(', ') }}</p>
        {# Optionally, show if the account is verified #}
        <p><strong>Verified:</strong> {{ app.user.isVerified ? 'Yes' : 'No' }}</p>
        {# If you have a related UserInfo entity with firstName and lastName #}
        {% if app.user.userInfo %}
            <p><strong>Name:</strong> {{ app.user.userInfo.firstName }} {{ app.user.userInfo.lastName }}</p>
        {% endif %}
 <div class="admin-icon" style="font-size: 80px; color: #4c6ef5;">
            <i class="fa fa-user-circle"></i>
        </div>
    </div>
    <!-- Icon on the right -->
       
{% else %}
    <p>No admin is currently logged in.</p>
{% endif %}
</div>
{% endblock %}
