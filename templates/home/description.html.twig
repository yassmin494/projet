{% extends 'base.html.twig' %}

{% block title %}{{ destination }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">{{ destination }}</h1>

    <h3>Programme Jour par Jour</h3>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Jour</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for day in tripDays %}
                <tr>
                    <td>Jour {{ day.dayNumber }}</td>
                    <td>{{ day.description }}</td>
                    <td>
                        <img src="{{ day.image }}" alt="Jour {{ day.dayNumber }}" style="width:150px;">
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p class="mt-3"><strong>Prix total : â‚¬{{ price }}</strong></p>

    
    

<a href="{{ path('app_payment', {'destination': destination}) }}" class="btn btn-success btn-lg">Payer</a>

</div>
{% endblock %}
