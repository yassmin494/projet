{% extends 'base.html.twig' %}

{% block title %}Réservations - Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Liste des Réservations</h1>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Service</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.clientName }}</td>
                    <td>{{ reservation.clientEmail }}</td>
                    <td>{{ reservation.service ? reservation.service.name : 'N/A' }}</td>
                    <td>{{ reservation.startDate|date('d/m/Y') }}</td>
                    <td>{{ reservation.endDate|date('d/m/Y') }}</td>
                    <td>{{ reservation.status }}</td>
                    <td>
                        <form action="{{ path('admin_reservation_delete', {'id':reservation.id}) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réservation ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                            <button class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucune réservation trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
