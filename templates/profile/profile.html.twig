{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
<style>
body {
    background: linear-gradient(135deg, #5252bdff, #ebeaf2ff);
    min-height: 100vh;
}

/* Glass Container */
.profile-container {
    max-width: 1100px;
    margin: 80px auto;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(14px);
    padding: 45px;
    border-radius: 24px;
    box-shadow: 0 30px 60px rgba(0,0,0,0.25);
    color: white;
    display: flex;
    gap: 35px;
    flex-wrap: wrap;
}

/* Left Form */
.profile-form-container {
    flex: 2;
}

/* Header */
.profile-header {
    text-align: center;
    margin-bottom: 35px;
}

.profile-header h2 {
    font-size: 34px;
    font-weight: 700;
}

.profile-header p {
    opacity: 0.85;
}

/* Grid */
.profile-form-grid {
    display: flex;
    gap: 25px;
    flex-wrap: wrap;
}

.form-left,
.form-right {
    flex: 1;
    min-width: 260px;
}

/* Labels */
.profile-form label {
    font-weight: 600;
    margin-bottom: 6px;
    display: block;
}

/* Inputs */
.profile-form input,
.profile-form select {
    width: 100%;
    padding: 14px;
    border-radius: 14px;
    border: none;
    background: rgba(241, 227, 227, 0.85);
    font-size: 15px;
}

/* Buttons â€“ STATIC */
.save-btn {
    margin-top: 25px;
    width: 100%;
    padding: 16px;
    font-size: 16px;
    border-radius: 14px;
    border: none;
    color: white;
    background: #3f51b5;
    cursor: pointer;
    text-align: center;
    text-decoration: none;

    transition: none !important;
    transform: none !important;
    box-shadow: none !important;
}

.save-btn:hover,
.save-btn:active,
.save-btn:focus {
    background: #3f51b5;
    outline: none;
}

/* Sidebar */
.profile-sidebar {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 75px;
}

/* Sidebar Buttons */
.sidebar-btn {
    padding: 16px;
    border-radius: 14px;
    text-align: center;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    color: white;

    transition: none !important;
    transform: none !important;
}

.sidebar-btn.reservations {
    background: #6e9e71ff;
}

.sidebar-btn.logout {
    background: #da3a40ff;
}

.sidebar-btn:hover,
.sidebar-btn:active {
    opacity: 0.95;
}

/* Responsive */
@media (max-width: 768px) {
    .profile-container {
        flex-direction: column;
    }

    .profile-sidebar {
        margin-top: 30px;
    }
}
</style>

<div class="profile-container">
    <!-- Form -->
    <div class="profile-form-container">
        <div class="profile-header">
            <h2>My Profile</h2>
            <p>Manage your personal information</p>
        </div>

        {{ form_start(form, {attr: {class: 'profile-form'}}) }}

        <div class="profile-form-grid">
            <div class="form-left">
                {{ form_row(form.firstName) }}
                {{ form_row(form.phoneNumber) }}
                {{ form_row(form.country) }}
                {{ form_row(form.dateOfBirth) }}
            </div>

            <div class="form-right">
                {{ form_row(form.lastName) }}
                {{ form_row(form.location) }}
                {{ form_row(form.gender) }}
            </div>
        </div>

        <div style="display:none;">
            {{ form_row(form.user) }}
        </div>

        <button type="submit" class="save-btn">Save Changes</button>

        {{ form_end(form) }}
    </div>

    <!-- Sidebar -->
    <div class="profile-sidebar">
        <a href="{{ path('app_old_reservations') }}" class="sidebar-btn reservations">
            My Reservations
        </a>
        <a href="{{ path('app_logout') }}" class="sidebar-btn logout">
            Logout
        </a>
    </div>
</div>
{% endblock %}
